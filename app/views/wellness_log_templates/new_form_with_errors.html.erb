<% if @wellness_log.present? %>
  <% if @wellness_log.errors.any? %>
    <% @wellness_log.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new wellness log
</h1>


<hr>

<form action="/create_wellness_log" method="post">

  <div class="form-group">
    <label for="gut_wellness">
      Gut wellness
    </label>

    <input type="text" id="gut_wellness" name="gut_wellness" class="form-control" value="<%= @wellness_log.gut_wellness %>">
  </div>

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @wellness_log.date %>">
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :username, @wellness_log.user_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create wellness log
  </button>
</form>

<hr>

<a href="/wellness_logs">
  Go back
</a>
