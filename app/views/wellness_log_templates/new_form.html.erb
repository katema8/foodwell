<h1>
  Add a new wellness log
</h1>


<hr>

<form action="/create_wellness_log" method="post">

  <div class="form-group">
    <label for="gut_wellness">
      Gut wellness
    </label>

    <input type="text" id="gut_wellness" name="gut_wellness" class="form-control">
  </div>

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control">
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :username, @wellness_log.user_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create wellness log
  </button>
</form>

<hr>

<a href="/wellness_logs">
  Go back
</a>
