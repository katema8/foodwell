<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All wellness logs
    </h1>

    <a href="/wellness_logs/new" class="btn btn-block btn-outline-secondary">
      Add a new wellness log
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Gut wellness
        </th>

        <th>
          Date
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @wellness_logs.each do |wellness_log| %>
      <tr>
        <!-- Display wellness_log.id start -->
        <td>
          <%= wellness_log.id %>
        </td>
        <!-- Display wellness_log.id end -->

        <!-- Display wellness_log.gut_wellness start -->
        <td>
          <%= wellness_log.gut_wellness %>
        </td>
        <!-- Display wellness_log.gut_wellness end -->

        <!-- Display wellness_log.date start -->
        <td>
          <%= wellness_log.date %>
        </td>
        <!-- Display wellness_log.date end -->

        <!-- Display wellness_log.user_id start -->
        <td>
          <%= wellness_log.user_id %>
        </td>
        <!-- Display wellness_log.user_id end -->

        <!-- Display wellness_log.created_at start -->
        <td>
          <%= time_ago_in_words(wellness_log.created_at) %> ago
        </td>
        <!-- Display wellness_log.created_at end -->

        <!-- Display wellness_log.updated_at start -->
        <td>
          <%= time_ago_in_words(wellness_log.updated_at) %> ago
        </td>
        <!-- Display wellness_log.updated_at end -->

        <td>
          <a href="/wellness_logs/<%= wellness_log.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
