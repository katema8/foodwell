<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All wellness logs
    </h1>

    <a href="/wellness_logs/new" class="btn btn-block btn-outline-secondary">
      Add a new wellness log
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "wellness_log_templates/wellness_logs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Gut wellness
        </th>

        <th>
          Date
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @wellness_logs.each do |wellness_log| %>
      <tr>
        <td>
          <%= wellness_log.id %>
        </td>

        <td>
          <%= wellness_log.gut_wellness %>
        </td>

        <td>
          <%= wellness_log.date %>
        </td>

        <td>
          <% if wellness_log.user.present? %>
            <a href="/users/<%= wellness_log.user.id %>">
              <%= wellness_log.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(wellness_log.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(wellness_log.updated_at) %> ago
        </td>

        <td>
          <a href="/wellness_logs/<%= wellness_log.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @wellness_logs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
