<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All food logs
    </h1>

    <a href="/food_logs/new" class="btn btn-block btn-outline-secondary">
      Add a new food log
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "food_log_templates/food_logs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Food item
        </th>

        <th>
          Date
        </th>

        <th>
          Wellness log
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @food_logs.each do |food_log| %>
      <tr>
        <td>
          <%= food_log.id %>
        </td>

        <td>
          <%= food_log.food_item_id %>
        </td>

        <td>
          <%= food_log.date %>
        </td>

        <td>
          <% if food_log.wellness_log.present? %>
            <a href="/wellness_logs/<%= food_log.wellness_log.id %>">
              <%= food_log.wellness_log.gut_wellness %>
            </a>
          <% end %>
        </td>

        <td>
          <% if food_log.user.present? %>
            <a href="/users/<%= food_log.user.id %>">
              <%= food_log.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(food_log.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(food_log.updated_at) %> ago
        </td>

        <td>
          <a href="/food_logs/<%= food_log.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @food_logs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
