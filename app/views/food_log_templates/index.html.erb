<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All food logs
    </h1>

    <a href="/food_logs/new" class="btn btn-block btn-outline-secondary">
      Add a new food log
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Food item
        </th>

        <th>
          Date
        </th>

        <th>
          Wellness log
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @food_logs.each do |food_log| %>
      <tr>
        <!-- Display food_log.id start -->
        <td>
          <%= food_log.id %>
        </td>
        <!-- Display food_log.id end -->

        <!-- Display food_log.food_item_id start -->
        <td>
          <%= food_log.food_item_id %>
        </td>
        <!-- Display food_log.food_item_id end -->

        <!-- Display food_log.date start -->
        <td>
          <%= food_log.date %>
        </td>
        <!-- Display food_log.date end -->

        <!-- Display food_log.wellness_log_id start -->
        <td>
          <%= food_log.wellness_log.gut_wellness %>
        </td>
        <!-- Display food_log.wellness_log_id end -->

        <!-- Display food_log.user_id start -->
        <td>
          <%= food_log.user_id %>
        </td>
        <!-- Display food_log.user_id end -->

        <!-- Display food_log.created_at start -->
        <td>
          <%= time_ago_in_words(food_log.created_at) %> ago
        </td>
        <!-- Display food_log.created_at end -->

        <!-- Display food_log.updated_at start -->
        <td>
          <%= time_ago_in_words(food_log.updated_at) %> ago
        </td>
        <!-- Display food_log.updated_at end -->

        <td>
          <a href="/food_logs/<%= food_log.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
