<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All food items
    </h1>

    <a href="/food_items/new" class="btn btn-block btn-outline-secondary">
      Add a new food item
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "food_item_templates/food_items_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Food item
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @food_items.each do |food_item| %>
      <tr>
        <td>
          <%= food_item.id %>
        </td>

        <td>
          <%= food_item.food_item %>
        </td>

        <td>
          <%= time_ago_in_words(food_item.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(food_item.updated_at) %> ago
        </td>

        <td>
          <a href="/food_items/<%= food_item.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @food_items, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
